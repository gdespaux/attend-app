<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:fillViewport="true"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.quickattend.quickattend.activity.LeadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/user_icon"
                android:elevation="1dp"
                android:tint="@color/place_autocomplete_prediction_secondary_text"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:transitionGroup="true"
                android:visibility="visible"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/studentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                    android:ems="10"
                    android:hint="@string/student_name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords|textPersonName"
                    tools:targetApi="m" />

            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hideableInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/calendar_icon"
                    android:tint="@color/place_autocomplete_prediction_secondary_text"
                    app:srcCompat="@drawable/ic_today_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutStudentDOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:transitionGroup="true"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/studentDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                        android:ems="10"
                        android:hint="@string/student_dob"
                        android:inputType="date"
                        tools:targetApi="m" />

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.1"
                    android:contentDescription="@string/phone_icon"
                    android:tint="@color/place_autocomplete_prediction_secondary_text"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutStudentPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:transitionGroup="true"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/studentPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        tools:targetApi="m" />

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"
                    android:text="@string/gender"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1" />

                <RadioGroup
                    android:id="@+id/genderRadios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        style="?attr/radioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorAccent"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        style="?attr/radioButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorAccent"
                        android:text="@string/female" />
                </RadioGroup>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.1"
                    android:contentDescription="Email Icon"
                    android:tint="@color/place_autocomplete_prediction_secondary_text"
                    app:srcCompat="@drawable/ic_email_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutStudentEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:transitionGroup="true"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/studentEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                        android:ems="10"
                        android:hint="Student Email"
                        android:inputType="textEmailAddress"
                        tools:targetApi="m" />
                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.1"
                    android:contentDescription="Email Icon"
                    android:tint="@color/place_autocomplete_prediction_secondary_text"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutStudentAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:transitionGroup="true"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <AutoCompleteTextView
                        android:id="@+id/studentAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                        android:ems="10"
                        android:hint="Student Address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        tools:targetApi="m" />
                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.1"
                    android:contentDescription="Misc Info Icon"
                    android:tint="@color/place_autocomplete_prediction_secondary_text"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layoutStudentMiscInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:transitionGroup="true"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/studentMiscInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/place_autocomplete_prediction_secondary_text"
                        android:ems="10"
                        android:gravity="top|start"
                        android:hint="Misc Info"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        tools:targetApi="m" />
                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SUBMIT" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
